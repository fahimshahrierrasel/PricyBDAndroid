                android:text="3.5mm jack : " />

            <TextView
                android:id="@+id/audio_jack"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/loudspeaker"
                android:layout_toEndOf="@+id/audio_jack_title"
                android:text="Yes" />

            <TextView
                android:id="@+id/sound_features_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/audio_jack"
                android:paddingLeft="6dp"
                android:text="Other : " />

