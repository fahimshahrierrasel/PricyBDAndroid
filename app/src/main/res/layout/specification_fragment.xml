<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:layout_behavior="@string/appbar_scrolling_view_behavior">

    <android.support.v7.widget.CardView
        android:id="@+id/network_card"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="5dp"
        app:cardCornerRadius="5dp"
        app:cardElevation="3dp">

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical">

            <TextView
                android:id="@+id/network_header"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingLeft="3dp"
                android:text="NETWORK"
                android:textSize="20sp" />

            <TextView
                android:id="@+id/technology_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/network_header"
                android:paddingLeft="6dp"
                android:text="Technology : " />

            <TextView
                android:id="@+id/technology"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/network_header"
                android:layout_toEndOf="@+id/technology_title"
                android:text="GSM / HSPA / LTE" />

            <TextView
                android:id="@+id/bands_2g_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/technology"
                android:paddingLeft="6dp"
                android:text="2G Bands : " />

            <TextView
                android:id="@+id/bands_2g"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/technology"
                android:layout_toEndOf="@+id/bands_2g_title"
                android:text="GSM" />

            <TextView
                android:id="@+id/bands_3g_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/bands_2g"
                android:paddingLeft="6dp"
                android:text="3G Bands : " />

            <TextView
                android:id="@+id/bands_3g"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/bands_2g"
                android:layout_toEndOf="@+id/bands_3g_title"
                android:text="HSPDA" />

            <TextView
                android:id="@+id/bands_4g_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/bands_3g"
                android:paddingLeft="6dp"
                android:text="4G Bands : " />

            <TextView
                android:id="@+id/bands_4g"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/bands_3g"
                android:layout_toEndOf="@+id/bands_4g_title"
                android:text="LTE" />

            <TextView
                android:id="@+id/speed_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/bands_4g"
                android:paddingLeft="6dp"
                android:text="Speed : " />

            <TextView
                android:id="@+id/speed"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/bands_4g"
                android:layout_toEndOf="@+id/speed_title"
                android:text="50 MBPS" />

            <TextView
                android:id="@+id/gprs_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/speed"
                android:paddingLeft="6dp"
                android:text="GPRS : " />

            <TextView
                android:id="@+id/gprs"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/speed"
                android:layout_toEndOf="@+id/gprs_title"
                android:text="Yes" />

            <TextView
                android:id="@+id/edge_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/gprs"
                android:paddingLeft="6dp"
                android:text="EDGE : " />

            <TextView
                android:id="@+id/edge"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/gprs"
                android:layout_toEndOf="@+id/edge_title"
                android:text="Yes" />

        </RelativeLayout>

    </android.support.v7.widget.CardView>

    <android.support.v7.widget.CardView
        android:id="@+id/launch_card"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/network_card"
        android:layout_margin="5dp"
        app:cardCornerRadius="5dp"
        app:cardElevation="3dp">

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical">

            <TextView
                android:id="@+id/launch_header"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingLeft="3dp"
                android:text="LAUNCH"
                android:textSize="20sp" />

            <TextView
                android:id="@+id/announced_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/launch_header"
                android:paddingLeft="6dp"
                android:text="Announced : " />

            <TextView
                android:id="@+id/announced"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/launch_header"
                android:layout_toEndOf="@+id/announced_title"
                android:text="2016, September" />

            <TextView
                android:id="@+id/status_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/announced"
                android:paddingLeft="6dp"
                android:text="Status : " />

            <TextView
                android:id="@+id/status"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/announced"
                android:layout_toEndOf="@+id/status_title"
                android:text="Released, 2016, September" />
        </RelativeLayout>
    </android.support.v7.widget.CardView>

    <android.support.v7.widget.CardView
        android:id="@+id/body_card"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/launch_card"
        android:layout_margin="5dp"
        app:cardCornerRadius="5dp"
        app:cardElevation="3dp">

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical">

            <TextView
                android:id="@+id/body_header"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingLeft="3dp"
                android:text="BODY"
                android:textSize="20sp" />

            <TextView
                android:id="@+id/dimensions_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/body_header"
                android:paddingLeft="6dp"
                android:text="Dimensions : " />

            <TextView
                android:id="@+id/dimensions"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/body_header"
                android:layout_toEndOf="@+id/dimensions_title"
                android:text="151.5 x 74.9 x 8.1 mm (5.96 x 2.95 x 0.32 in)" />

            <TextView
                android:id="@+id/weight_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/dimensions"
                android:paddingLeft="6dp"
                android:text="Weight : " />

            <TextView
                android:id="@+id/weight"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/dimensions"
                android:layout_toEndOf="@+id/weight_title"
                android:text="172 g (6.07 oz)" />

            <TextView
                android:id="@+id/sim_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/weight"
                android:paddingLeft="6dp"
                android:text="SIM : " />

            <TextView
                android:id="@+id/sim"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/weight"
                android:layout_toEndOf="@+id/sim_title"
                android:text="Nano-SIM" />

            <TextView
                android:id="@+id/body_features_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/sim"
                android:paddingLeft="6dp"
                android:text="Other : " />

            <TextView
                android:id="@+id/body_features"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/sim"
                android:layout_toEndOf="@+id/body_features_title"
                android:text="Corning Gorilla Glass 4 back panel" />
        </RelativeLayout>
    </android.support.v7.widget.CardView>

    <android.support.v7.widget.CardView
        android:id="@+id/display_card"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/body_card"
        android:layout_margin="5dp"
        app:cardCornerRadius="5dp"
        app:cardElevation="3dp">

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical">

            <TextView
                android:id="@+id/display_header"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingLeft="3dp"
                android:text="DISPLAY"
                android:textSize="20sp" />

            <TextView
                android:id="@+id/display_type_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/display_header"
                android:paddingLeft="6dp"
                android:text="Type : " />

            <TextView
                android:id="@+id/display_type"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/display_header"
                android:layout_toEndOf="@+id/display_type_title"
                android:text="Super AMOLED capacitive touchscreen, 16M colors" />

            <TextView
                android:id="@+id/display_size_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/display_type"
                android:paddingLeft="6dp"
                android:text="Size : " />

            <TextView
                android:id="@+id/display_size"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/display_type"
                android:layout_toEndOf="@+id/display_size_title"
