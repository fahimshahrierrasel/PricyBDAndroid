            <TextView
                android:id="@+id/resolution_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/display_size"
                android:paddingLeft="6dp"
                android:text="Resolution : " />

            <TextView
                android:id="@+id/resolution"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/display_size"
                android:layout_toEndOf="@+id/resolution_title"
                android:text="1440 x 2560" />

            <TextView
                android:id="@+id/protection_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/resolution"
                android:paddingLeft="6dp"
                android:text="Protection : " />

            <TextView
                android:id="@+id/protection"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/resolution"
                android:layout_toEndOf="@+id/protection_title"
                android:text="Corning Gorilla Glass 4" />

            <TextView
                android:id="@+id/display_features_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/protection"
                android:paddingLeft="6dp"
                android:text="Other : " />

            <TextView
                android:id="@+id/display_features"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/protection"
                android:layout_toEndOf="@+id/display_features_title"
                android:text="TouchWiz UI" />
        </RelativeLayout>
    </android.support.v7.widget.CardView>

    <android.support.v7.widget.CardView
        android:id="@+id/platform_card"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/display_card"
        android:layout_margin="5dp"
        app:cardCornerRadius="5dp"
        app:cardElevation="3dp">

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical">

            <TextView
                android:id="@+id/platform_header"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingLeft="3dp"
                android:text="PLATFORM"
                android:textSize="20sp" />

            <TextView
                android:id="@+id/os_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/platform_header"
                android:paddingLeft="6dp"
                android:text="OS : " />

            <TextView
                android:id="@+id/os"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/platform_header"
                android:layout_toEndOf="@+id/os_title"
                android:text="Android OS, v5.0.2 (Lollipop), upgradable to v6.0.1 (Marshmallow)" />

            <TextView
                android:id="@+id/chipset_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/os"
                android:paddingLeft="6dp"
                android:text="Chipset : " />

            <TextView
                android:id="@+id/chipset"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/os"
                android:layout_toEndOf="@+id/chipset_title"
                android:text="Exynos 7420 Octa" />

            <TextView
                android:id="@+id/cpu_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/chipset"
                android:paddingLeft="6dp"
                android:text="CPU : " />

            <TextView
                android:id="@+id/cpu"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/chipset"
                android:layout_toEndOf="@+id/cpu_title"
                android:text="Octa-core (4x2.1 GHz ortex-A57 &amp; 4x1.5 GHz Cortex-A53)" />

            <TextView
                android:id="@+id/gpu_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/cpu"
                android:paddingLeft="6dp"
                android:text="GPU : " />

            <TextView
                android:id="@+id/gpu"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/cpu"
                android:layout_toEndOf="@+id/gpu_title"
                android:text="Mali-T760MP8" />

        </RelativeLayout>
    </android.support.v7.widget.CardView>

    <android.support.v7.widget.CardView
        android:id="@+id/memory_card"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/platform_card"
        android:layout_margin="5dp"
        app:cardCornerRadius="5dp"
        app:cardElevation="3dp">

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical">

            <TextView
                android:id="@+id/memory_header"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingLeft="3dp"
                android:text="MEMORY"
                android:textSize="20sp" />

            <TextView
                android:id="@+id/ram_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/memory_header"
                android:paddingLeft="6dp"
                android:text="RAM : " />

            <TextView
                android:id="@+id/ram"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/memory_header"
                android:layout_toEndOf="@+id/ram_title"
                android:text="4 GB" />

            <TextView
                android:id="@+id/internal_memory_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/ram"
                android:paddingLeft="6dp"
                android:text="Internal : " />

            <TextView
                android:id="@+id/internal_memory"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/ram"
                android:layout_toEndOf="@+id/internal_memory_title"
                android:text="32/64 GB" />

            <TextView
                android:id="@+id/external_memory_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/internal_memory"
                android:paddingLeft="6dp"
                android:text="Card slot : " />

            <TextView
                android:id="@+id/external_memory"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/internal_memory"
                android:layout_toEndOf="@+id/external_memory_title"
                android:text="microSD, up to 256 GB" />
        </RelativeLayout>
    </android.support.v7.widget.CardView>

    <android.support.v7.widget.CardView
        android:id="@+id/camera_card"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/memory_card"
        android:layout_margin="5dp"
        app:cardCornerRadius="5dp"
        app:cardElevation="3dp">

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical">

            <TextView
                android:id="@+id/camera_header"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingLeft="3dp"
                android:text="CAMERA"
                android:textSize="20sp" />

            <TextView
                android:id="@+id/primary_camera_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/camera_header"
                android:paddingLeft="6dp"
                android:text="Primary : " />

            <TextView
                android:id="@+id/primary_camera"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/camera_header"
                android:layout_toEndOf="@+id/primary_camera_title"
