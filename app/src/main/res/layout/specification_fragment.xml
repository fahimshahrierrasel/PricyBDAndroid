            <TextView
                android:id="@+id/secondary_camera_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/primary_camera"
                android:paddingLeft="6dp"
                android:text="Secondary : " />

            <TextView
                android:id="@+id/secondary_camera"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/primary_camera"
                android:layout_toEndOf="@+id/secondary_camera_title"
                android:text="5 MP, f/1.7, 22mm, dual video call, Auto HDR" />

            <TextView
                android:id="@+id/video_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/secondary_camera"
                android:paddingLeft="6dp"
                android:text="Video : " />

            <TextView
                android:id="@+id/video"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/secondary_camera"
                android:layout_toEndOf="@+id/video_title"
                android:text="Octa-core (4x2.1 GHz ortex-A57 &amp; 4x1.5 GHz Cortex-A53)" />

            <TextView
                android:id="@+id/camera_features_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/video"
                android:paddingLeft="6dp"
                android:text="Features : " />

            <TextView
                android:id="@+id/camera_features"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/video"
                android:layout_toEndOf="@+id/camera_features_title"
                android:paddingBottom="4dp"
                android:text="1/2.5&quot; sensor size, 1.4 µm pixel size, geo-tagging, simultaneous 4K video and 9MP image recording, touch focus, face/smile detection, Auto HDR, panorama" />

        </RelativeLayout>
    </android.support.v7.widget.CardView>

    <android.support.v7.widget.CardView
        android:id="@+id/sound_card"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/camera_card"
        android:layout_margin="5dp"
